<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmerScreen"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        >


        <TextView
            android:id="@+id/iHelloFarmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/vast_shadow"
            android:background="@drawable/custom_card_border"
            android:gravity="center"
            android:text="Hello Nation Builder"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            app:cardElevation="12dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card_border"
                >


                <ImageView
                    android:id="@+id/iAddCropLogo"
                    android:src="@drawable/addcroplogo"
                    android:layout_width="150sp"
                    android:layout_height="100sp"
                    android:layout_marginTop="10sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:id="@+id/iTextAddCrop"
                    android:text="Sell New Crop"
                    android:textStyle="bold"
                    android:fontFamily="@font/vast_shadow"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:cardElevation="12dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/custom_card_border"
                >


                <ImageView
                    android:id="@+id/iBiddingLogo"
                    android:src="@drawable/rupee_logo"
                    android:layout_width="150sp"
                    android:layout_height="100sp"
                    android:layout_marginTop="10sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:id="@+id/iTextBiddingSummary"
                    android:text="Active Bids"
                    android:textStyle="bold"
                    android:fontFamily="@font/vast_shadow"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="13sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardElevation="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_card_border"
                    >


                    <ImageView
                        android:id="@+id/iHistoryLogo"
                        android:src="@drawable/history_logo"
                        android:layout_width="150sp"
                        android:layout_height="100sp"
                        android:layout_marginTop="10sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:id="@+id/iTextSellingHistory"
                        android:text="History"
                        android:textStyle="bold"
                        android:fontFamily="@font/vast_shadow"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="13sp"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardElevation="12dp"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_card_border"
                    >


                    <ImageView
                        android:id="@+id/iWeatherLogo"
                        android:src="@drawable/market_logo"
                        android:layout_width="150sp"
                        android:layout_height="100sp"
                        android:layout_marginTop="10sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:id="@+id/iTextWeather"
                        android:text="Agri-Info"
                        android:textStyle="bold"
                        android:fontFamily="@font/vast_shadow"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="13sp"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardElevation="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_card_border"
                    >


                    <ImageView
                        android:id="@+id/iHelpCentreLogo"
                        android:src="@drawable/share_logo"
                        android:layout_width="150sp"
                        android:layout_height="100sp"
                        android:layout_marginTop="10sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:id="@+id/iTextHelpCentre"
                        android:text="Share Crops"
                        android:textStyle="bold"
                        android:fontFamily="@font/vast_shadow"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="13sp"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:cardElevation="12dp"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/custom_card_border"
                    >


                    <ImageView
                        android:id="@+id/iProfileLogo"
                        android:src="@drawable/ic_account_circle_black_24dp"
                        android:layout_width="150sp"
                        android:layout_height="100sp"
                        android:layout_marginTop="10sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:id="@+id/iTextProfile"
                        android:text=" Profile"
                        android:textStyle="bold"
                        android:fontFamily="@font/vast_shadow"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="13sp"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
        android:id="@+id/iSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_template"
        android:text="Sign Out"
        android:textColor="#fff"
        android:textSize="15sp" />


    </LinearLayout>

</ScrollView>