<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeartActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:id="@+id/iRideNow"
            android:text="Who are you ?"
            android:textStyle="bold"
            android:fontFamily="@font/vast_shadow"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:background="@drawable/custom_border">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ifarmer_iamge"
            android:src="@drawable/farmer_image"/>

    <Button
        android:id="@+id/iFarmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_template"
        android:text="I am a FARMER "
        android:textColor="#fff"
        android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/custom_buyer_border">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ibuyer_image"
            android:src="@drawable/buyer_image"
            android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/iBuyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_buyer_template"
        android:text="I am a BUYER "
        android:textColor="#fff"
        android:textSize="15sp" />
    </LinearLayout>

    </LinearLayout>



</ScrollView>